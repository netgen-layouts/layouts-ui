<div class="bm-header">
  <div class="layout-name">

      {{#if base_layout}}
        <a href="#" class="js-normal-mode">{{base_layout.name}}</a>
        <span>&gt;</span>
      {{/if}}

      {{#if model.shared }}<i class="material-icons shared-icon">share</i>{{/if}}

      {{#if normal_editing}}
        <span class="show-form bm-tooltip js-show-form" title="{{ model.description}}"><span class="js-layout-name" data-placement="bottom">{{ model.name }}</span> <i class="material-icons">edit</i></span>
      {{else}}
        <span class="show-form bm-tooltip js-layout-name" title="{{ model.description}}">{{ model.name }}</span>
      {{/if}}

  </div>
  <div class="actions">
    {{#if normal_editing}}
        <button class="btn btn-link js-discard">Discard</button>
        <button class="btn btn-primary js-publish">Publish layout</button>
    {{else}}
        {{#eq state.mode 'edit_master'}}
          <button class="btn btn-link js-back">&lt; Back</button>
          <button class="btn btn-link js-discard">Discard</button>
          <button class="btn btn-primary js-publish">Publish layout</button>
        {{else}}
          {{#eq state.mode 'linking'}}
            <button class="btn btn-link js-soft-back">&lt; Back</button>
          {{else}}
            <button class="btn btn-link js-back">&lt; Back</button>
          {{/eq}}

        {{/eq}}
    {{/if}}
  </div>
</div>

<div class="error_message">
  <p>User friendly message</p>
  <p><a data-toggle="collapse" href="#{{uid}}" aria-expanded="false" aria-controls="{{uid false}}">Error details</a></p>

  <div id="{{uid false}}" class="collapse">
    {{#each errors}}
      <div class="error">
        <p>{{message}}</p>
        <p><code>{{type}}</code> - {{url}}</p>
        <p>{{timestamp}} :: {{status_code}} - {{status_text}}</p>

        {{#if debug}}
          <div class="debug">
            <pre>{{ pretty_debug }}</pre>
          </div>
        {{/if}}

      </div>
    {{/each}}
  </div>
</div>
